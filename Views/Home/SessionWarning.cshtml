@model Ext_ID_OIDC_web_Application.Models.SessionWarningModel
@{
    ViewData["Title"] = "Session Warning";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        Single Session Enforcement
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-user-lock"></i>
                            Application Switch Required
                        </h5>
                        <p class="mb-0">@Model.WarningMessage</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user-check"></i>
                                        Currently Signed In
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>Application:</strong></p>
                                    <p class="text-info">@Model.CurrentAppName</p>
                                    <p class="mb-1"><strong>User:</strong></p>
                                    <p class="text-muted">@Model.UserName</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-sign-in-alt"></i>
                                        Requested Application
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>Application:</strong></p>
                                    <p class="text-success">@Model.RequestedAppName</p>
                                    <p class="mb-1"><strong>Action Required:</strong></p>
                                    <p class="text-muted">Sign out first to switch</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a href="@Model.ContinueUrl" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Continue with Current App
                        </a>
                        <a href="@Model.SignOutUrl" class="btn btn-warning">
                            <i class="fas fa-sign-out-alt"></i>
                            Sign Out & Switch to @Model.RequestedAppName
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


